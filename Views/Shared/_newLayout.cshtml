<!DOCTYPE html>
<html lang="en">
    <head>
        <title>NomadDoors</title>
        <meta charset="utf-8" />
        <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/Images/titleLogo.png")" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <!--[if lte IE 8]><script src="@Url.Content("~/Content/future/")assets/js/ie/html5shiv.js"></script><![endif]-->
        <link rel="stylesheet" href="@Url.Content("~/Content/future/")assets/css/main.css" />
        <!--[if lte IE 9]><link rel="stylesheet" href="@Url.Content("~/Content/future/")assets/css/ie9.css" /><![endif]-->
        <!--[if lte IE 8]><link rel="stylesheet" href="@Url.Content("~/Content/future/")assets/css/ie8.css" /><![endif]-->
    </head>
    <body class="single">
        <div id="wrapper">
            <!--header-->
            <header id="header">
                <h1><a href="@Url.Action("Index", "Home")" ><img src="@Url.Content("~/Images/headerlogo.png")" style="width:11%; padding-top:0.5em;" /></a></h1>
               <!-- <nav class="links">
                    <ul>
                        <li><a href="#">Lorem</a></li>
                        <li><a href="#">Ipsum</a></li>
                        <li><a href="#">Feugiat</a></li>
                        <li><a href="#">Tempus</a></li>
                        <li><a href="#">Adipiscing</a></li>
                    </ul>
                </nav>-->
                <nav class="main">
                    <ul>
                        @if (Request.IsAuthenticated)
                        {
                            <li class="menu">
                                <a class="fa-bars" href="#menu">Menu</a>
                            </li>
                        }
                        else
                        {
                            <li><a class="fa-user" href="@Url.Action("Login", "Account")">Login</a></li>
                        }


                       <!-- <li class="search">
                            <a class="fa-search" href="#search">Search</a>
                            <form id="search" method="get" action="#">
                                <input type="text" name="query" placeholder="Search" />
                            </form>
                        </li>
                        <li class="menu">
                            <a class="fa-bars" href="#menu">Menu</a>
                        </li>-->
                    </ul>
                </nav>
            </header>
@if (Request.IsAuthenticated)
                    {
                        var identity = (HttpContext.Current.User as Nomaddoors.MyPrincipal).Identity as Nomaddoors.MyIdentity;
            <section id="menu">

                <!-- Search -->
                <section class="posts">
                   
                        <article>
                        <a href="@Url.Action("Details", "User", new { id = identity.User.ID })" class="image"><img style="min-width:8em;width:8em;" src="@Url.Content("~/Images/User/")@identity.User.Image" alt="" /></a>
                        <header>
                            <h3><a href="@Url.Action("Details", "User", new { id = identity.User.ID })">@identity.User.Name @identity.User.Surname</a></h3>
                        </header>
                    </article>
                    
            </section>

            <!-- Links -->
            <section>
                <ul class="links">
                    <li>
                        <a href="@Url.Action("Details", "User", new { id = identity.User.ID })">
                            <h3>My Profile</h3>
                        </a>
                    </li>
                        <li>
                            <a href="@Url.Action("Create", "Home")">
                                <h3>Create Festival</h3>
                            </a>
                        </li>
                    <li>
                        <a href="#">
                            <h3>Messages</h3>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <h3>Tours</h3>
                        </a>
                    </li>
                </ul>
            </section>

            <!-- Actions -->
            <section>
                <ul class="actions vertical">
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
                    @Html.AntiForgeryToken()
                    <li><a href="javascript:document.getElementById('logoutForm').submit()" style="background-color: #4692cc; color: white !important;" class="button big fit">Logout</a></li>
                    }
                    
                </ul>
            </section>
            </section>
                    }
                @RenderBody()

            <!-- Footer -->
            <section id="footer">
                <ul class="icons">
                    <li><a href="https://www.facebook.com/NDYourTouristPartner/" class="fa-facebook"><span class="label">Facebook</span></a></li>
                    <li><a href="https://www.instagram.com/NOMADDOORS/" class="fa-instagram"><span class="label">Instagram</span></a></li>
                    <li><a href="#" class="fa-rss"><span class="label">RSS</span></a></li>
                    <li><a href="#" class="fa-envelope"><span class="label">Email</span></a></li>
                </ul>
                <p class="copyright">&copy; NomadDoors 2016. Design: <a href="#">Talgar</a></p>
            </section>

        </div>
            @Analytics.GetGoogleHtml("UA-80849255-1")
            @Analytics.GetGoogleHtml("UA-80829163-1")

            <!-- Scripts -->
            <script src="@Url.Content("~/Content/future/")assets/js/jquery.min.js"></script>
            <script src="@Url.Content("~/Content/future/")assets/js/skel.min.js"></script>
            <script src="@Url.Content("~/Content/future/")assets/js/util.js"></script>
            <!--[if lte IE 8]><script src="assets/js/ie/respond.min.js"></script><![endif]-->
            <script src="@Url.Content("~/Content/future/")assets/js/main.js"></script>
</body>
</html>
